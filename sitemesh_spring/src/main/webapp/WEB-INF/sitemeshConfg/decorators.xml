<?xml version="1.0" encoding="UTF-8"?>
<decorators defaultdir="/decorators">
	<excludes>
		<pattern>/index</pattern>
	</excludes>
	<!-- excludes는 sitemesh를 사용하지 않는다는 의미 -->
	
	<decorator name = "layout" page = "/WEB-INF/layout/layout.jsp">
		<pattern>/*</pattern>
	</decorator>
	<!-- /* 패턴으로 리턴되면, layout이라는 이름으로 지정한 페이지 페이아웃을 sitemesh 형태로 표현 -->
	<decorator name = "layout" page = "/WEB-INF/layout/layout2.jsp">
		<pattern>/web/*</pattern>
	</decorator>
</decorators>